<div class="max-w-3xl mx-auto space-y-6">
  <!-- Book details -->
  <div
    class="p-6 bg-white dark:bg-gray-800 rounded-xl shadow border dark:border-gray-700"
  >
    <h1 class="text-3xl font-bold"><%= @book.title %></h1>
    <p class="text-gray-600 dark:text-gray-300 italic">
      by <%= @book.author %>
    </p>
    <p class="mt-4 text-gray-800 dark:text-gray-200">
      <%= @book.description %>
    </p>
  </div>

  <!-- Comments section -->
  <div class="space-y-4">
    <h2 class="text-2xl font-semibold">Comments</h2>

    <% if @comments.any? %> <% @comments.each do |comment| %>
    <div class="p-4 bg-gray-100 dark:bg-gray-700 rounded shadow">
      <p class="text-gray-800 dark:text-gray-100"><%= comment.content %></p>
      <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
        Posted at <%= comment.created_at.strftime("%d %b %Y %H:%M") %>
      </p>
    </div>
    <% end %> <% else %>
    <p class="text-gray-500 dark:text-gray-400">
      No comments yet. Be the first!
    </p>
    <% end %>
  </div>

  <!-- New comment form -->
  <div class="mt-6">
    <%= form_with(model: [@book, @comment], local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :content, "Add a Comment", class: "block font-medium
      text-gray-700 dark:text-gray-200" %> <%= f.text_area :content, rows: 3,
      class: "w-full mt-1 p-2 border rounded bg-white dark:bg-gray-800
      dark:border-gray-600 text-gray-900 dark:text-gray-100" %>
    </div>
    <%= f.submit "Post Comment", class: "bg-blue-600 hover:bg-blue-700
    text-white px-4 py-2 rounded" %> <% end %>
  </div>
</div>
