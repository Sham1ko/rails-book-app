<div class="max-w-5xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1
      class="text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white"
    >
      Book Recommendations
    </h1>
    <%= link_to "Add Book", new_book_path, class: "inline-block bg-blue-600
    hover:bg-blue-700 text-white font-medium px-4 py-2 rounded-md shadow
    transition duration-200" %>
  </div>

  <% if @books.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <% @books.each do |book| %> <%= link_to book_path(book), class: "block p-6
    rounded-xl border border-gray-200 dark:border-gray-700 bg-white
    dark:bg-gray-900 shadow-sm hover:shadow-md transition group" do %>

    <!-- Book cover -->
    <div
      class="w-24 h-36 mb-4 rounded shadow-md flex flex-col items-center justify-center text-white text-center px-2"
      style="
        background-color: <%= [ '#4B5563', '#F87171', '#10B981',
          '#6366F1'].sample %>;
      "
    >
      <p class="text-xs font-semibold leading-tight">
        <%= truncate(book.title, length: 40) %>
      </p>
      <p class="text-[11px] mt-2 opacity-80"><%= book.author %></p>
    </div> 

    <!-- Book info -->
    <h2
      class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-1 group-hover:underline"
    >
      <%= book.title %>
    </h2>
    <p class="text-sm text-gray-500 dark:text-gray-400 italic mb-2">
      by <%= book.author %>
    </p>
    <p class="text-gray-700 dark:text-gray-300 mb-2 text-sm leading-relaxed">
      <%= truncate(book.description, length: 100) %>
    </p>
    <% end %> <% end %>
  </div>
  <% else %>
  <p class="text-gray-500 dark:text-gray-400 mt-10 text-center">
    No books added yet. Be the first!
  </p>
  <% end %>
</div>
